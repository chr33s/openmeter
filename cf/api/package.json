{
	"name": "cloudmeter-api",
	"version": "1.0.0",
	"description": "OpenMeter api implementation using Cloudflare",
	"type": "module",
	"main": "./index.ts",
	"scripts": {
		"dev": "wrangler dev",
		"build": "wrangler deploy --dry-run",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:push": "drizzle-kit push:sqlite",
		"db:migrate": "wrangler d1 migrations apply cloudmeter-db --remote",
		"deploy": "wrangler deploy",
		"test": "vitest run --silent",
		"typecheck": "tsc --noEmit"
	},
	"imports": {
		"#api/*": "./*.ts"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.9.3",
		"@types/node": "24.5.2",
		"drizzle-kit": "0.31.4",
		"oxlint": "^1.16.0",
		"typescript": "5.9.2",
		"vitest": "3.2.4",
		"wrangler": "4.38.0"
	},
	"dependencies": {
		"@hono/zod-validator": "0.7.3",
		"drizzle-orm": "0.44.5",
		"hono": "4.9.8",
		"zod": "4.1.9"
	}
}
