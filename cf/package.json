{
	"name": "cloudmeter",
	"version": "1.0.0",
	"description": "OpenMeter implementation using Cloudflare",
	"scripts": {
		"check": "prettier --check . && oxlint . && tsc --noEmit",
		"fix": "prettier --write . && oxlint --fix --fix-suggestions ."
	},
	"workspaces": [
		"api",
		"app"
	],
	"devDependencies": {
		"@prettier/plugin-oxc": "0.0.4",
		"oxlint": "1.16.0",
		"oxlint-tsgolint": "0.2.0",
		"prettier": "3.6.2",
		"typescript": "5.9.2"
	},
	"prettier": {
		"plugins": [
			"@prettier/plugin-oxc"
		]
	}
}
